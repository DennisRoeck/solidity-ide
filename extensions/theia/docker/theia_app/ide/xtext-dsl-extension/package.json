{
  "name": "xtext-dsl-extension",
  "keywords": [
    "theia-extension"
  ],
  "version": "0.1.0",
  "author": "itemis AG",
  "license": "EPL-1.0",
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "copyfiles": "latest",
    "rimraf": "latest",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "copy-ls": "rimraf lsp && mkdir lsp && cp -r ../../../../plugins/com.yakindu.solidity.ide/target/languageserver/* ./lsp/",
    "clean": "rimraf lib",
	"build": "tsc",
    "buildLocal": "tsc && yarn run copy-ls",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/solidity-frontend-module",
      "backend": "lib/node/solidity-backend-module"
    }
  ]
}
