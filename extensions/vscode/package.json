{
    "name": "xtext-vscode-example",
    "displayName": "Xtext VS Code example",
    "description": "A simple DSL example for VS Code",
    "version": "0.0.14",
    "publisher": "itemis",
    "icon": "images/itemis.png",
    "license": "EPL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/itemis/xtext-languageserver-example.git"
    },
    "bugs": {
        "url": "https://github.com/itemis/xtext-languageserver-example/issues"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:sol"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "solidity",
                "aliases": [
                    "solidity"
                ],
                "extensions": [
                    ".sol"
                ],
                "configuration": "./solidity.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "solidity",
                "scopeName": "text.sol",
                "path": "./syntaxes/solidity.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "sol.a.proxy",
                "title": "Solidity Command A"
            },
            {
                "command": "sol.b",
                "title": "Solidity Command B"
            }
        ]
    },
    "devDependencies": {
        "vscode": "^1.1.14",
        "typescript": "^2.5.3",
        "@types/node": "^7.0.43"
    },
    "dependencies": {
        "vscode-languageclient": "^4.1.3"
    },
    "scripts": {
        "prepublish": "node ./node_modules/vscode/bin/install && tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
